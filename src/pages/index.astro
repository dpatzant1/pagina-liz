		<!-- Script para KaTeX y el coraz√≥n oscilante -->
		<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
		<script is:inline>
			window.addEventListener('load', function() {
				// Renderizar la ecuaci√≥n con KaTeX
				const equationElement = document.getElementById('heart-equation');
				if (equationElement && typeof katex !== 'undefined') {
					katex.render('y = x^{\\frac{2}{3}} + \\frac{2}{3}(\\pi - x^2)^{\\frac{1}{2}} \\cdot \\sin(a \\cdot \\pi \\cdot x)', equationElement, {
						displayMode: true,
						throwOnError: false
					});
				}

				// Configuraci√≥n del canvas y la gr√°fica
				const canvas = document.getElementById('heartCanvas');
				const slider = document.getElementById('aSlider');
				
				if (!canvas || !slider) return;

				const ctx = canvas.getContext('2d');
				const width = canvas.width;
				const height = canvas.height;
				
				// Funci√≥n para graficar el coraz√≥n
				function drawHeart(a) {
					// Limpiar canvas
					ctx.fillStyle = '#0a0a0a';
					ctx.fillRect(0, 0, width, height);
					
					// Configurar el sistema de coordenadas (ajustado para zoom y centrado)
					const scale = 130; // pixels por unidad (aumentado para hacer zoom)
					const centerX = width / 2;
					const centerY = height / 2 + 20; // Centrado verticalmente con ligero ajuste
					
					// Dibujar ejes (sutiles)
					ctx.strokeStyle = 'rgba(255, 107, 157, 0.2)';
					ctx.lineWidth = 1;
					ctx.beginPath();
					// Eje X
					ctx.moveTo(0, centerY);
					ctx.lineTo(width, centerY);
					// Eje Y
					ctx.moveTo(centerX, 0);
					ctx.lineTo(centerX, height);
					ctx.stroke();
					
					// Dibujar la curva del coraz√≥n
					ctx.strokeStyle = '#FF6B9D';
					ctx.lineWidth = 2;
					ctx.beginPath();
					
					// L√≠mites del dominio: x va de -sqrt(œÄ) a sqrt(œÄ)
					const xMin = -Math.sqrt(Math.PI);
					const xMax = Math.sqrt(Math.PI);
					const step = 0.001; // Paso peque√±o para suavidad
					
					let firstPoint = true;
					
					for (let x = xMin; x <= xMax; x += step) {
						// Ecuaci√≥n del coraz√≥n oscilante con correcci√≥n para x negativas
						// y = |x|^(2/3) + (2/3) * sqrt(œÄ - x¬≤) * sin(a * œÄ * x)
						const term1 = Math.pow(Math.abs(x), 2/3);
						const sqrtTerm = Math.sqrt(Math.PI - x*x);
						const term2 = (2/3) * sqrtTerm * Math.sin(a * Math.PI * x);
						const y = term1 + term2;
						
						// Convertir a coordenadas del canvas
						const canvasX = centerX + x * scale;
						const canvasY = centerY - y * scale; // Invertir Y porque canvas crece hacia abajo
						
						if (firstPoint) {
							ctx.moveTo(canvasX, canvasY);
							firstPoint = false;
						} else {
							ctx.lineTo(canvasX, canvasY);
						}
					}
					
					ctx.stroke();
					
					// Agregar brillo al coraz√≥n cuando a es alto
					if (a > 30) {
						ctx.shadowBlur = 20;
						ctx.shadowColor = '#FF6B9D';
						
						// Redibujar con brillo
						ctx.beginPath();
						firstPoint = true;
						
						for (let x = xMin; x <= xMax; x += step) {
							const term1 = Math.pow(Math.abs(x), 2/3);
							const sqrtTerm = Math.sqrt(Math.PI - x*x);
							const term2 = (2/3) * sqrtTerm * Math.sin(a * Math.PI * x);
							const y = term1 + term2;
							
							const canvasX = centerX + x * scale;
							const canvasY = centerY - y * scale;
							
							if (firstPoint) {
								ctx.moveTo(canvasX, canvasY);
								firstPoint = false;
							} else {
								ctx.lineTo(canvasX, canvasY);
							}
						}
						
						ctx.stroke();
						ctx.shadowBlur = 0;
					}
				}
				
				// Event listener para el slider
				slider.addEventListener('input', function() {
					const a = parseFloat(this.value);
					drawHeart(a);
				});
				
				// Dibujar el coraz√≥n inicial con a = 0
				drawHeart(0);
			});
		</script>

		<!-- Script para el reproductor de m√∫sica -->
		<script is:inline>
			window.addEventListener('load', function() {
				const audio = document.getElementById('audioPlayer');
				const playButton = document.getElementById('playButton');
				const playIcon = document.querySelector('.play-icon');
				const pauseIcon = document.querySelector('.pause-icon');
				const progressBar = document.getElementById('progressBar');
				const progressFill = document.getElementById('progressFill');
				const currentTimeEl = document.getElementById('currentTime');
				const durationEl = document.getElementById('duration');
				const lyricsContainer = document.getElementById('lyricsContainer');
				const lyricLines = document.querySelectorAll('.lyric-line');
				
				let currentLyricIndex = -1;
				
				// Play/Pause toggle
				playButton.addEventListener('click', function() {
					if (audio.paused) {
						audio.play().then(function() {
							playIcon.style.display = 'none';
							pauseIcon.style.display = 'block';
							playButton.classList.add('playing');
						}).catch(function(error) {
							console.error('Error al reproducir audio:', error);
							alert('No se pudo reproducir el audio. Por favor, verifica que el archivo existe.');
						});
					} else {
						audio.pause();
						playIcon.style.display = 'block';
						pauseIcon.style.display = 'none';
						playButton.classList.remove('playing');
					}
				});
				
				// Update duration when loaded
				audio.addEventListener('loadedmetadata', function() {
				if (audio.duration && !isNaN(audio.duration) && isFinite(audio.duration)) {
					durationEl.textContent = formatTime(audio.duration);
				}
			});
			
			// Fallback for duration
			audio.addEventListener('canplay', function() {
				if (durationEl.textContent === '0:00' && audio.duration && !isNaN(audio.duration) && isFinite(audio.duration)) {
					durationEl.textContent = formatTime(audio.duration);
				}
			});
			
			audio.addEventListener('durationchange', function() {
				if (audio.duration && !isNaN(audio.duration) && isFinite(audio.duration)) {
					durationEl.textContent = formatTime(audio.duration);
				}
			});
			
			// Force load metadata
			audio.load();
				audio.addEventListener('timeupdate', function() {
					const progress = (audio.currentTime / audio.duration) * 100;
					progressFill.style.width = progress + '%';
					currentTimeEl.textContent = formatTime(audio.currentTime);
					
					// Sync lyrics
					updateLyrics(audio.currentTime);
				});
				
				// Click on progress bar to seek
				progressBar.addEventListener('click', function(e) {
					const rect = progressBar.getBoundingClientRect();
					const percent = (e.clientX - rect.left) / rect.width;
					audio.currentTime = percent * audio.duration;
				});
				
				// Format time helper
				function formatTime(seconds) {
					const mins = Math.floor(seconds / 60);
					const secs = Math.floor(seconds % 60);
					return mins + ':' + (secs < 10 ? '0' : '') + secs;
				}
				
				// Update active lyric
				function updateLyrics(currentTime) {
					for (let i = lyricLines.length - 1; i >= 0; i--) {
						const lyricTime = parseFloat(lyricLines[i].dataset.time);
						if (currentTime >= lyricTime) {
							if (currentLyricIndex !== i) {
								// Remove active from all
								lyricLines.forEach(line => line.classList.remove('active'));
								// Add active to current
								lyricLines[i].classList.add('active');
								currentLyricIndex = i;
								
								// Scroll to active lyric only if playing
								if (!audio.paused) {
									lyricLines[i].scrollIntoView({
										behavior: 'smooth',
										block: 'center'
									});
								}
							}
							break;
						}
					}
				}
				
				// Click on lyric to seek to that time
				lyricLines.forEach(function(line) {
					line.addEventListener('click', function() {
						const lyricTime = parseFloat(line.dataset.time);
						audio.currentTime = lyricTime;
						// Auto-play if paused
						if (audio.paused) {
							audio.play().then(function() {
								playIcon.style.display = 'none';
								pauseIcon.style.display = 'block';
								playButton.classList.add('playing');
							}).catch(function(error) {
								console.log('Error al reproducir:', error);
							});
						}
					});
				});
			});
		</script>
